{
    "name": "Polyaxon-Template",

    "dockerComposeFile": ["../docker-compose.yaml"],
    "service": "polyaxon-dev",
    "workspaceFolder": "/polyaxon",
    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": true,
                "editor.tabSize": 4,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true,

                "python.defaultInterpreterPath": ".venv/bin/python",
                "python.formatting.provider": "black",
                "python.linting.banditEnabled": true,
                "python.linting.banditArgs": [
                    "--config", ".bandit.yml"
                ],
                "python.linting.mypyEnabled": true,
                "python.linting.prospectorEnabled": true,
                "python.linting.prospectorArgs": [
                    "--without-tool", "pylint"
                ],
                "python.linting.pydocstyleEnabled": true,
                "python.linting.pylintEnabled": true,
                "python.isort.args": [
                    "--profile=black", "--src=${workspaceFolder}"
                ],
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": ["tests"],
                "python.testing.unittestEnabled": false
            },
            "extensions": [
                "DavidAnson.vscode-markdownlint",
                "donjayamanne.githistory",
                "eamodio.gitlens",
                "EditorConfig.EditorConfig",
                "GitHub.copilot",
                "GitHub.vscode-pull-request-github",
                "mblode.pretty-formatter",
                "mohsen1.prettify-json",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "streetsidesoftware.code-spell-checker",
                "streetsidesoftware.code-spell-checker-french",
                "streetsidesoftware.code-spell-checker-german",
                "VisualStudioExptTeam.vscodeintellicode",
                "yy0931.save-as-root",
                "Gruntfuggly.todo-tree",
                "wayou.vscode-todo-highlight"
                // Add more/remove vscode extensions if needed
            ]
        }
    },

    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],

    // Uncomment the next line if you want start specific services in your Docker Compose config.
    // "runServices": [],

    // Uncomment the next line if you want to keep your containers running after VS Code shuts down.
    // "shutdownAction": "none",

    // Uncomment the next line to run commands after the container is started
    // "postStartCommand": "",

    // Uncomment the next line to run commands after the container is created - for example installing curl.
    "postCreateCommand": "sh scripts/polyaxon-config.sh",

    // Uncomment to connect as a non-root user if you've added one. See https://aka.ms/vscode-remote/containers/non-root.
    "remoteUser": "vscode"
}
